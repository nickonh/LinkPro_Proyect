@using LinkPro_Proyect.Models
@model List<HorarioCLS>

<div class="" role="main">
    <div class="">
        <div class="x_content">
            <div class="table-responsive">
                <div id="divHorario">
                    <table class="table table-striped jambo_table">
                        <thead>
                            <tr class="headings">
                                <th>
                                    @Html.LabelFor(model => Model[0].nombreEspecialidad)
                                </th>
                                <th>
                                    @Html.LabelFor(model => Model[0].fecha_atention)
                                </th>
                                <th>
                                    @Html.LabelFor(model => Model[0].hora_atention)
                                </th>
                                <th>
                                    @Html.LabelFor(model => Model[0].hora_fin)
                                </th>
                                <th>
                                    @Html.LabelFor(model => Model[0].nombreDisp)
                                </th>
                                <th><label>Acciones</label></th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombreEspecialidad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.fecha_atention)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HoraInicio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HoraFin)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nombreDisp)
                                </td>
                                <td>
                                    <button type="button" onclick="Editar(id=@item.horarioid)" class="btn btn-info fa fa-pencil-square-o" data-toggle="modal" data-target="#exampleModal">
                                    </button>
                                    @Html.ActionLink("Details", "Details", new { id = item.horarioid }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.horarioid })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




